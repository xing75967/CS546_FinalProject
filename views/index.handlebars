<div class="jumbotron text-center bg-light p-5 rounded-lg mb-4">
    <h1 class="display-4">Discover Truly Trustworthy AI Tools</h1>
    <p class="lead">A community-driven ecosystem for professional, trustworthy AI tool evaluation, helping you make efficient decisions.</p>
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <form action="/search" method="GET" id="search-form">
                <div class="input-group">
                    <input type="text" name="query" class="form-control form-control-lg" placeholder="Try searching for 'free multilingual text generation tools'..." required>
                    <button class="btn btn-primary btn-lg" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                </div>
            </form>
            <div class="mt-2 text-muted">
                Popular: <a href="/search?query=Image Generation">Image Generation</a>, <a href="/search?query=Code Assistant">Code Assistant</a>, <a href="/search?query=Video Editing">Video Editing</a>
            </div>
        </div>
    </div>
</div>
<div class="popular-tools">
    <h2 class="text-center mb-4">Popular Tools Recommendation</h2>
    <div class="row">
        {{#if topTools}}
            {{#each topTools}}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 tool-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><a href="/tools/{{this._id}}" class="stretched-link">{{this.name}}</a></h5>
                            <p class="card-text text-muted flex-grow-1">{{this.summary}}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="ratings">
                                    {{#each (stars this.averageRating)}}<i class="fa-solid fa-star text-warning"></i>{{/each}}
                                    {{#each (emptyStars this.averageRating)}}<i class="fa-regular fa-star text-warning"></i>{{/each}}
                                    <span class="ms-1">{{toFixed this.averageRating 1}}</span>
                                </div>
                                <span class="badge bg-secondary">{{this.categories.[0]}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="col">
                <p class="text-center">No popular tools yet. Stay tuned!</p>
            </div>
        {{/if}}
    </div>
</div>
