<h1 class="mb-4">Admin Dashboard</h1>
<h3 class="mt-5">Pending Tools</h3>
{{#if pendingTools.length}}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tool Name</th>
                <th>Submission Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each pendingTools}}
            <tr>
                <td><a href="/tools/{{this._id}}" target="_blank">{{this.name}}</a></td>
                <td>{{this.submissionDate}}</td>
                <td>
                    <form action="/admin/tools/{{this._id}}/approve" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form action="/admin/tools/{{this._id}}/reject" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-warning btn-sm">Reject</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<p class="text-center">No pending tools at the moment.</p>
{{/if}}
<h3 class="mt-5">Managed Tools</h3>
{{#if managedTools.length}}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tool Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each managedTools}}
            <tr>
                <td><a href="/tools/{{this._id}}" target="_blank">{{this.name}}</a></td>
                <td>
                    {{#if (eq this.status "approved")}}
                        <span class="badge bg-success">Approved</span>
                    {{else}}
                        <span class="badge bg-secondary">Rejected</span>
                    {{/if}}
                </td>
                <td>
                    <form action="/admin/tools/{{this._id}}/delete" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to permanently delete this tool? This action cannot be undone.');">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<p class="text-center">No managed tools at the moment.</p>
{{/if}}
