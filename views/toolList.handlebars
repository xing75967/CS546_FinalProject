<div class="container">
    <h1 class="mb-4">{{pageTitle}}</h1>
    {{#if query}}
        <p class="lead text-muted">Found {{tools.length}} results for "{{query}}".</p>
    {{/if}}
    <div class="row">
        {{#if tools}}
            {{#each tools}}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 tool-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><a href="/tools/{{this._id}}" class="stretched-link">{{this.name}}</a></h5>
                            <p class="card-text text-muted flex-grow-1">{{this.summary}}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="ratings">
                                    {{#each (stars this.averageRating)}}<i class="fa-solid fa-star text-warning"></i>{{/each}}
                                    {{#each (emptyStars this.averageRating)}}<i class="fa-regular fa-star text-warning"></i>{{/each}}
                                    <span class="ms-1">{{toFixed this.averageRating 1}}</span>
                                </div>
                                <span class="badge bg-secondary">{{this.categories.[0]}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="col">
                <p class="text-center p-5">Sorry, no matching tools were found.</p>
            </div>
        {{/if}}
    </div>
</div>
