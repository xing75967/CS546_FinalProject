<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-body">
                <h1 class="card-title">{{tool.name}}</h1>
                <p class="card-text text-muted">{{tool.summary}}</p>
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div class="ratings">
                        {{#each (stars tool.averageRating)}}<i class="fa-solid fa-star text-warning"></i>{{/each}}
                        {{#each (emptyStars tool.averageRating)}}<i class="fa-regular fa-star text-warning"></i>{{/each}}
                        <span class="ms-1 fw-bold">{{toFixed tool.averageRating 1}}</span>
                        <span class="text-muted">({{tool.reviews.length}} reviews)</span>
                    </div>
                    <div class="d-flex gap-2">
                        {{#if user}}
                            <button id="bookmark-btn" type="button" class="btn {{#if isBookmarked}}btn-success{{else}}btn-outline-success{{/if}}" data-tool-id="{{tool._id}}">
                                <i class="fa-solid {{#if isBookmarked}}fa-bookmark{{else}}fa-regular fa-bookmark{{/if}}"></i>
                                <span id="bookmark-text">{{#if isBookmarked}}Bookmarked{{else}}Bookmark{{/if}}</span>
                            </button>
                        {{/if}}
                        <a href="{{tool.officialUrl}}" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                            <i class="fa-solid fa-arrow-up-right-from-square"></i> Visit Official Site
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="reviews-section">
            <h3 class="mb-3">Community Reviews</h3>
            {{#if tool.reviews.length}}
                {{#each tool.reviews}}
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <img src="{{#if this.user.avatarUrl}}{{this.user.avatarUrl}}{{else}}/public/images/default-avatar.png{{/if}}" alt="{{this.user.username}}'s avatar" class="avatar-sm rounded-circle me-3">
                            <div>
                                <h6 class="mb-0">{{this.user.username}}</h6>
                                <div class="ratings mb-1">
                                    {{#each (stars this.rating)}}<i class="fa-solid fa-star text-warning"></i>{{/each}}
                                    {{#each (emptyStars this.rating)}}<i class="fa-regular fa-star text-warning"></i>{{/each}}
                                </div>
                                <p class="card-text">{{this.comment}}</p>
                                <small class="text-muted">Reviewed on {{this.date}}</small>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <p>No reviews yet. Be the first to comment!</p>
            {{/if}}
        </div>
        {{#if user}}
        <div class="add-review-section mt-4">
            <h4>Leave Your Review</h4>
            <form action="/tools/{{tool._id}}/reviews" method="POST">
                <div class="mb-3">
                    <label for="rating" class="form-label">Your Rating</label>
                    <select class="form-select" id="rating" name="rating" required>
                        <option value="">Please select a rating</option>
                        <option value="5">5 Stars - Excellent!</option>
                        <option value="4">4 Stars - Very Good</option>
                        <option value="3">3 Stars - Good</option>
                        <option value="2">2 Stars - Fair</option>
                        <option value="1">1 Star - Poor</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Your Comment</label>
                    <textarea class="form-control" id="comment" name="comment" rows="4" placeholder="Share your experience with this tool..." required></textarea>
                </div>
                <button type="submit" class="btn btn-success">Submit Review</button>
            </form>
        </div>
        {{/if}}
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">Tool Details</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Category:</strong> {{tool.category}}</li>
                <li class="list-group-item"><strong>Tech Stack:</strong> {{#if tool.techStack.length}}{{join tool.techStack ", "}}{{else}}N/A{{/if}}</li>
                <li class="list-group-item"><strong>Release Date:</strong> {{tool.releaseDate}}</li>
                <li class="list-group-item"><strong>Submitted by:</strong> <a href="/profile/{{tool.submittedBy._id}}">{{tool.submittedBy.username}}</a></li>
            </ul>
        </div>
    </div>
</div>
