
<main>
  <h2>{{tool.name}}</h2>
  <p>{{tool.description}}</p>
  <p>Official URL: <a href="{{tool.official_url}}" target="_blank">{{tool.official_url}}</a></p>
  <p>Category: {{tool.category}}</p>
  <p>Ratings: Functionality {{tool.ratings.functionality}}, Usability {{tool.ratings.usability}}, Value {{tool.ratings.value}}</p>

  <section>
    <h3>Reviews</h3>
    <ul>
      {{#each reviews}}
        <li>
          <strong>{{this.user_id}}</strong> - {{this.content}} (Func: {{this.ratings.functionality}}, Usab: {{this.ratings.usability}}, Val: {{this.ratings.value}})
        </li>
      {{/each}}
    </ul>
    {{#if user}}
      <form id="review-form">
        <textarea name="content" placeholder="Write your review" required></textarea><br />
        <label>Functionality: <input type="number" name="functionality" min="1" max="5" required /></label><br />
        <label>Usability: <input type="number" name="usability" min="1" max="5" required /></label><br />
        <label>Value: <input type="number" name="value" min="1" max="5" required /></label><br />
        <button type="submit">Submit Review</button>
      </form>
    {{else}}
      <p><a href="/auth/login">Login</a> to submit a review.</p>
    {{/if}}
  </section>
</main>
